    margin-left: 27px
    margin-bottom: 21px

.rotate
    position: relative
    z-index: 10
    transition: 0.3s ease

    &:hover
        transform: rotate(-3deg)

        &::after
            transform: rotate(6deg)
            opacity: 1

    &::after
        absolute()
        top: 0
        right: 0
        bottom: 0
        left: 0
        background: $red
        border-radius: 20px
        z-index: -10
        opacity: 0
        transition: 0.3s ease

.ornament
    // margin-top: 50px
    // position: relative
    border-radius: 0 0 29px 29px

    &--gray, &--red
        &::before
            absolute()
            left: 0
            right: 0
            // top: -50px
            top: -20px
            height: 50px

    &--gray
        background $gray
        &::before
            background: url('../img/gray-ornament.svg') repeat-x top left

    &--red
        background $red
        &::before
            background: url('../img/red-ornament.svg') repeat-x top left